#include <bits/stdc++.h>
using namespace std;

#define fast_io ios::sync_with_stdio(false); cin.tie(nullptr);

void solve() {
  int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n; 
        int arr[6];
        int total=0,m=1;
        for(int i=1;i<6;i++){
            arr[i]=n%10;
            n=n/10;
            if(arr[i]!=0){
                total++;
            }
        }
        cout<<total<<"\n";
        for(int i=1;i<6;i++){
            if(arr[i] !=0){
                cout<<arr[i]*m<<" ";
            }
            m=m*10;
        }
        cout<<"\n";
    }
    
}   

int main() {
    fast_io
    solve();
    return 0;
}
