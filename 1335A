#include <bits/stdc++.h>
using namespace std;
 
#define fast_io ios::sync_with_stdio(false); cin.tie(nullptr);
 
void solve() {
    int n;
    cin >> n;
 
    vector<int> a(n); // dynamic array
    for(int i = 0; i < n; i++){
        cin >> a[i]; // fixed input
    }
 
    for(int i = 0; i < n; i++){
        int b = 0; // declare b outside if
        if(a[i]>2){
            b = (a[i] - 1) / 2;
            cout << b << endl;
        }
        else{
        cout << "0" << endl;}
    }
}
 
int main() {
    fast_io
    solve();
    return 0;
}
