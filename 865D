#include <bits/stdc++.h>
using namespace std;
 
using i64 = long long;
 
int main() {
    int N;
    cin>>N;
    
    vector<int>p(N);
    for(int i = 0; i < N; i++) {
        cin>>p[i];
    }
    
    i64 ans=0;
    
    priority_queue<int>pq;
    for(int i = 0; i < N; i++) {
        pq.push(-p[i]);
        if(p[i] + pq.top() > 0) {
            ans += p[i] + pq.top();
            pq.pop();
            pq.push(-p[i]);
        }
    }
    cout<<ans;
    
    return 0;
}
