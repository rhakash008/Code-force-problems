#include <bits/stdc++.h>
using namespace std;
#define fast_io ios::sync_with_stdio(false); cin.tie(nullptr);

void solve() {
    int n;
    cin>>n;
    vector<int>p(n);
    for (int i = 0; i < n; i++) cin >> p[i];

    int a=p[0], b=p[0];
    int count = 0;

    for (int i = 1; i < n; i++) {
        if (p[i] > a) {
            count++;
            a=p[i];
        } else if (p[i]<b) {
            count++;
            b=p[i];
        }
    }
    cout <<count;
}

int main() {
    fast_io
    solve();
    return 0;
}
