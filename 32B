#include <bits/stdc++.h>
using namespace std;
#define ii int
#define ll long long int
#define fast_io ios::sync_with_stdio(false); cin.tie(nullptr);

void solve() {
    string s;
    cin>>s;
    int n =s.length();
    for(ii i=0; i<n;i++){
       
        if(s[i]=='.'){
            cout<<"0";
            
        } 
        else if(s[i]== '-'){
            if(i+1<n){
                if(s[i+1]== '.'){
                    cout<<"1";
               
                }
                else if(s[i+1]=='-'){
                    cout<<"2";
                
                }
                
            }
            i++;    
        }

    }
    cout<<endl;

}

int main() {
    fast_io
    solve();
    return 0;
}
